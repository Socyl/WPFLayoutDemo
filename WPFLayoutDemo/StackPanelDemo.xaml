<Window x:Class="WPFLayoutDemo.StackPanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLayoutDemo"
        mc:Ignorable="d"
        Title="StackPanelDemo" Height="450" Width="800">
    <StackPanel >
        <Label Content="Label" Background="#FFD03737"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="TextBox"/>
        <CheckBox Content="CheckBox"/>
        <CheckBox Content="CheckBox"/>
        <ListBox Height="100">
            <ListBoxItem>Hey</ListBoxItem>
            <ListBoxItem>Hey again</ListBoxItem>
            <ListBoxItem>Fixed</ListBoxItem>
        </ListBox>
        <Button Content="Button"/>
    </StackPanel>
</Window>
